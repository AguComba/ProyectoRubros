@model IEnumerable<ProyectoPruebas.Models.SubRubro>
@{
    ViewData["Title"] = "SubRubros";
}

<h1>Sub Rubros</h1>

<!-- Boton del modal -->
<button type="button" class="btn btn-outline-primary mb-3 cursor-nuevo" onclick="AbrirModal(modalCrearSubRubro)">
    <i class="bi bi-plus-circle"></i> Crear SubRubro 
</button>

<table class="table ">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>Rubro</th>
            <th></th>
        </tr>
    </thead>
    <tbody id="body-subRubros" >

    </tbody>
</table>



<!-- Modal -->
<div class="modal fade" id="modalCrearSubRubro" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="titulo-modal-subRubro"></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <div>
            <div class="alert alert-danger "id='alertSubRubro'></div> 
            <input type= "hidden" id='SubRubroID'/>
            <input placeholder="Ingrese una descripcion" type="text" id="inputSubRubro" class="form-control"/>
          </div>
          <div>
              @Html.DropDownList("RubroID", null, htmlAttributes: new {@class = "form-control"})
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-info" onclick='GuardarSubRubro()'>Crear</button>
        <button type="button" class="btn btn-outline-danger" onclick='VaciarFormulario()' data-bs-dismiss="modal">Cerrar</button>
      </div>
    </div>
  </div>
</div>

@section Scripts {
<script src="~/js/SubRubros.js"></script>
<script>
window.onload = CompletarTablaSubRubros();
</script>
}
